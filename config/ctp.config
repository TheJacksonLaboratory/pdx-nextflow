//====================  Nextflow/Container Config  ==========

manifest = {
	name = "ctp" // "PDX_CTP"
	description = "Pipeline for processing of PDX CTP exome capture kit data, contains Xenome step for processing PDX samples"
	author = "Brian Sanderson, Sai Lek, Carolyn Paisie, Mike Lloyd, Anuj Srivastava, Rupesh Kesharwani, Copyright Jackson Laboratory 2022"
}

params {
	extension='.fastq.gz'
    pattern="*{.,_,-}R{1,2}*"
    read_type = 'PE' // SE
    preserve_work = "yes"
    concat_lanes = false

	// Reference fasta
    ref_fa = '/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/Exome/Homo_sapiens_assembly38.fasta'
    ref_fa_indices = '/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/Exome/hs38DH.fa'

    // Quality Stats params
    min_pct_hq_reads = '0.0'

	ref_prefix='/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/Exome/hg38_broad_NOD_based_on_mm10_k25'
    gold_std_indels='/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/Exome/Mills_and_1000G_gold_standard.indels.hg38.vcf.gz'
    known_indels='/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/Exome/Homo_sapiens_assembly38.known_indels.vcf.gz'
    targets_gatk='/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/Exome/359genes_targets_sorted_gatk_hg38.bed'

    dbsnp='/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/Exome/dbsnp_144.hg38.vcf.gz'

    targets_picard='/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/Exome/359genes_targets_sorted_gatk_hg38_picard.bed'
    targets_exons_picard='/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/Exome/CGA_exon_list_371_genes_targets_gatk_hg38_picard.bed'

    msisensor_model='/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/Exome/models_hg38'

    samp_ploidy='4'

    minDP='140'

    fa2bit='/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/Exome/Homo_sapiens_assembly38.fa.2bit'

    snpEff_config="/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/Exome/snpEff.config"
    snpEff_data='/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/Exome/data/hg38'
    hgvs_data='/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/Exome/data'
    ensembl_transcript='/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/Exome/ensemble_transcript_snpeff_list_v1.txt'
    dbNSFP='/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/Exome/dbNSFP3.2a.txt.gz'
    Cosmic_newer='/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/Exome/Sorted_Cosmicv80_Coding_Noncoding.vcf'
    Cosmic_older='/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/Exome/COSMICv75_Coding_NonCoding.vcf'
    rec_var='/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/Exome/hg38_recurring_variants_ctp'
    bins_ctpcoverage='/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/Exome/1MB_bins_ctpcoverage_hg38.bed'
    tmb_prog='/projects/omics_share/.pdx/pdx_resource_service/elion/pipelines/bin/TMB_final.R'
    ctp_genes='/projects/omics_share/.pdx/pdx_resource_service/elion/refdata/RNA/RNA_Expression_Estimation/359genes_b38_noheader_withNames_with_chr.bed'
}