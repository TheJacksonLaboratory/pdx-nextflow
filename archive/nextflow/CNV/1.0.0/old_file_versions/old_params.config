// Config file that will be unique for each pipeline run, edited by individual users; will have civet options specified ("default") for things like minimum quality, required sequencing depth, etc

params {
  // paths to input CEL file.
  _celPath = "/projects/paisic/PDX_SNP_array"
  celInput = "${_celPath}/J000102326_SGJ102326F001P4_JGM_CG0826_SNP.CEL"


  hapmap_dat = '/projects/compsci/nextflow_pipeline_reference_data/PDX/CNV/hapmap.ncbi.nlm.nih.gov/'

  hapmap_fm = '/projects/compsci/nextflow_pipeline_reference_data/PDX/CNV/hapmap_female300_SNP6.txt'

  hapmap_m = '/projects/compsci/nextflow_pipeline_reference_data/PDX/CNV/hapmap_male300_SNP6.txt'

  genoclust = '/projects/compsci/nextflow_pipeline_reference_data/PDX/CNV/gw6.genocluster'

  snp6chip = '/projects/compsci/nextflow_pipeline_reference_data/PDX/CNV/GenomeWideSNP_6.cdf'

  snp6chip_birdseed_mod = '/projects/compsci/nextflow_pipeline_reference_data/PDX/CNV/GenomeWideSNP_6.birdseed.models'

  snp6chip_specsnps = '/projects/compsci/nextflow_pipeline_reference_data/PDX/CNV/GenomeWideSNP_6.specialSNPs'

  hapmap_norm_target = '/projects/compsci/nextflow_pipeline_reference_data/PDX/CNV/hapmap.quant-norm.normalization-target.txt'

  gw6_pfb_file = '/projects/compsci/nextflow_pipeline_reference_data/PDX/CNV/affygw6.hg38.pfb'

  SNPpos = '/projects/compsci/nextflow_pipeline_reference_data/PDX/CNV/SNPpos_Affy_na36_hg38.txt'

  GC = '/projects/compsci/nextflow_pipeline_reference_data/PDX/CNV/GC_AffySNP6_na36_hg38.txt'

  chr_arm = '/projects/compsci/nextflow_pipeline_bin/GRCh38_chromosome_arm.txt'

  exp_mart_genes = '/projects/compsci/nextflow_pipeline_reference_data/PDX/CNV/mart_export_gene_chr1-Y.GRCh38ensembl84.20170420.txt'



  // E-mail address where notifications from pipeline will be sent
  email	= "carolyn.paisie@jax.org"

  // Directory where temporary files will be located
  tmpdir = "/fastscratch/paisic"


  // Final directory where output files from analysis are located
  outdir = "/projects/paisic/PDX_SNP_array_pipeline_results"

  // Directory where output files will be stored during pipeline run
  outputdir = "/fastscratch/paisic/PDX_CNV_testing"  


}

